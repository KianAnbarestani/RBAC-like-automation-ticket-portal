# Django Secret Key
# Replace with your actual secret key. Keep this value secret in production!
DJANGO_SECRET_KEY=your-unique-secret-key

# Production Domain
# Set this to your production domain (e.g., mysite.com). For local development, use your local domain.
DJANGO_PRODUCTION_DOMAIN=mysite.local

# Static Files Configuration
# Replace with the absolute path where you want to collect static files in production.
DJANGO_STATIC_ROOT=/absolute/path/to/staticfiles

# Media Files Configuration
# Replace with the absolute path where you want to store uploaded media files.
DJANGO_MEDIA_ROOT=/absolute/path/to/mediafiles

# Admins and Managers
# Replace with the name and email of the site administrator.
DJANGO_ADMIN_NAME=Your Admin Name
DJANGO_ADMIN_EMAIL=admin@example.com

# Email Configuration
# Replace with your email server settings.
DJANGO_EMAIL_HOST=smtp.your-email-provider.com
DJANGO_EMAIL_HOST_USER=your-email@example.com
DJANGO_EMAIL_HOST_PASSWORD=your-email-password

# Logging Configuration
# Replace with the absolute path where you want to store your Django log file.
DJANGO_LOG_FILE=/absolute/path/to/django.log
